{
  "version": 2,
  "name": "dakka-frontend",
  "builds": [
    {
      "src": "ser-app/dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://your-backend-domain.herokuapp.com/api/$1"
    },
    {
      "src": "/chat/(.*)",
      "dest": "https://your-backend-domain.herokuapp.com/chat/$1"
    },
    {
      "src": "/admin/(.*)",
      "dest": "https://your-backend-domain.herokuapp.com/admin/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/ser-app/dist/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}